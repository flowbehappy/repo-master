# Feishu
APP_ID=
APP_SECRET=
BASE_DOMAIN=https://open.feishu.cn
BOT_NAME=deephack

# Repo (optional)
REPO_PATH=
# Multiple repos (optional, comma-separated). If set, REPO_PATH is ignored.
REPO_PATHS=

# Answering
MODE=llm
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL_PROVIDER=
OPENAI_MODEL=gpt-4o-mini
OPENAI_REASONING_EFFORT=

# TiDB.ai (optional external knowledge source)
TIDB_AI_ENABLED=true
TIDB_AI_BASE_URL=https://tidb.ai
TIDB_AI_TIMEOUT_MS=120000
TIDB_AI_MAX_CONTEXT_CHARS=24000
TIDB_AI_MAX_SOURCES=12
TIDB_AI_CHAT_ENGINE=default

# Vision (optional)
VISION_MAX_IMAGES=8
VISION_MAX_IMAGE_BYTES=10485760
VISION_IMAGE_DETAIL=high

# Repo scan limits (optional)
REPO_MAX_FILES=8000
REPO_MAX_FILE_BYTES=1048576
REPO_MAX_SNIPPETS=20
REPO_SNIPPET_CONTEXT_LINES=12
REPO_MAX_CONTEXT_CHARS=80000
# Repo scan workers/queue (optional)
REPO_SEARCH_WORKERS=2
REPO_SEARCH_QUEUE_MAX=100

# Limits
MAX_CHAT_MESSAGES=20
MAX_PROMPT_CHARS=80000

# Logging
LOG_LEVEL=info
